=stylesheet_link_tag "navbar"
%head
  %title Welcome to Bike Share
  //%link{ :rel => "stylesheet", :type => "text/css", :href => "../../dist/css/bootstrap.css"}
  //%script{ :type => "text/javascript", :src => "../../dist/js/bootstrap.js"}
%body
  %nav.navbar.navbar-default
    .container-fluid
    <!-- Brand and toggle get grouped for better mobile display -->
    .navbar-header
      %button{:type=>"button", :class=>"navbar-toggle collapsed", "data-toggle" =>"collapse", "data-target" =>"#bs-example-navbar-collapse-1"}
        %span{:class => "sr-only"}Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a
        =image_tag "bubs_logo.jpeg"

    <!-- Collect the nav links, forms, and other content for toggling -->
    .collapse.navbar-collapse#bs-example-navbar-collapse-1
      %ul.nav.navbar-nav
        -if(@hilite == "index")
          %li.active
            =link_to "What is Bike Share?", index_page_path
        -else
          %li
            =link_to "What is Bike Share?", index_page_path
        -if(@hilite == "join")
          %li.active
            =link_to "Join Bike Share", join_page_path
        -else
          %li
            =link_to "Join Bike Share", join_page_path
        -if(@hilite == "how_it_works")
          %li.active
            =link_to "How It Works", how_it_works_page_path
        -else
          %li
            =link_to "How It Works", how_it_works_page_path
        %li.dropdown
          %a{:href => "#", :class=>"dropdown-toggle", "data-toggle" =>"dropdown", :role=>"button", "aria-expanded" =>"false"}
            Bike Shop
            %span.caret
          %ul{:class=>"dropdown-menu", :role=>"menu"}
            %li
              =link_to "Information", bike_shop_info_page_path
            %li
              %a{:href=>"#"} Request Repair Help
        -if(@hilite == "contact_us")
          %li.active
            =link_to "Contact Us", contact_us_page_path
        -else
          %li
            =link_to "Contact Us", contact_us_page_path
        -if(@hilite == "resources")
          %li.active
            =link_to "Resources", resources_page_path
        -else
          %li
            =link_to "Resources", resources_page_path
      %form{:class=>"navbar-form navbar-right", :role=>"search"}
        .form-group
          %input{:type=>"text", :class=>"form-control", :placeholder=>"Search"}
        %button{:type=>"submit", :class=>"btn btn-default"}Submit